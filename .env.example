# Cloudflare R2 Configuration
# Required for media upload script
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here
R2_BUCKET_NAME=anandmoghan-media

# Media CDN Configuration
# Used by the application to generate media URLs
NEXT_PUBLIC_MEDIA_URL=https://media.anandmoghan.me

# Optional: Enable CDN optimization parameters
NEXT_PUBLIC_CDN_OPTIMIZE=false

# Google Analytics
# Get your Measurement ID from https://analytics.google.com/
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here
